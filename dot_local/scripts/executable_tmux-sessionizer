#!/usr/bin/env bash
# stolen from ThePrimeagen, improved for running inside or outside tmux

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find ~/Documents/wrk ~/Documents/myc ~/ -mindepth 1 -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr '.' '_')

# Check if tmux server is running
tmux_running=$(pgrep -x tmux)

if [[ -z $TMUX ]]; then
    # NOT inside tmux

    if [[ -z $tmux_running ]]; then
        # No tmux server running: create new session and attach
        exec tmux new-session -s "$selected_name" -c "$selected"
    else
        # tmux server running but not inside tmux client
        # Check if session exists; if not create detached; then attach
        if ! tmux has-session -t "$selected_name" 2>/dev/null; then
            tmux new-session -ds "$selected_name" -c "$selected"
        fi
        exec tmux attach-session -t "$selected_name"
    fi

else
    # INSIDE tmux client
    if ! tmux has-session -t "$selected_name" 2>/dev/null; then
        tmux new-session -ds "$selected_name" -c "$selected"
    fi
    tmux switch-client -t "$selected_name"
fi
